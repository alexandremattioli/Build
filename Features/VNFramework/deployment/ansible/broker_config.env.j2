# VNF Broker Environment Configuration
# Generated by Ansible deployment

# Service Configuration
BROKER_HOST=0.0.0.0
BROKER_PORT={{ broker_port }}
BROKER_WORKERS=4

# TLS Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/etc/vnfbroker/tls/cert.pem
TLS_KEY_PATH=/etc/vnfbroker/tls/key.pem

# JWT Authentication
JWT_SECRET={{ jwt_secret }}
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Dictionary Configuration
DICTIONARY_PATH=/etc/vnfbroker/dictionaries

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port }}
REDIS_DB=0
REDIS_PASSWORD={{ redis_password | default('') }}
REDIS_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE={{ broker_home }}/logs/broker.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Request Timeout (seconds)
REQUEST_TIMEOUT=30
CONNECT_TIMEOUT=10

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF=2.0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Idempotency Store
IDEMPOTENCY_TTL=3600
IDEMPOTENCY_CLEANUP_INTERVAL=300
